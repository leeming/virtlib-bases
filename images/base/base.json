{
    "builders":
    [
        {
            "type": "qemu",
            "vm_name": "deb-ansible",
            "headless": true,

	        "output_directory": "artifact_{{timestamp}}",
            "disk_image": true,
            "iso_url": "../base/artifact_1653342882/debian-11-qemu",
            "iso_checksum": "none",
            "memory": "2048",
            "disk_size": "5000",
            "cpus": 2,

            "use_backing_file": false,


            "ssh_username": "packer",
            "ssh_password": "packer",
            "ssh_timeout": "10m",
            "ssh_pty" : true
        }
    ],
    "provisioners": [
        {
            "type": "ansible",
            "playbook_file": "../../../ansible-playbooks/playbooks/base_playbook.yml",
            "ansible_env_vars": [ "ANSIBLE_HOST_KEY_CHECKING=False", "ANSIBLE_SSH_ARGS='-o ForwardAgent=yes -o ControlMaster=auto -o ControlPersist=60s'", "ANSIBLE_NOCOLOR=True"],
            "user": "packer",
            "extra_arguments": [ "--extra-vars", "ansible_become_pass=packer", "--extra-vars", "ansible_python_interpreter=/usr/bin/python3" ]

        }
    ]
}
