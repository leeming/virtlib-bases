{
    "builders":
    [
        {
            "type": "qemu",
            "vm_name": "debian-11-{{build_type}}",
            "headless": true,

	    "output_directory": "artifact_{{timestamp}}",
            "iso_url": "file:///home/leeming/Downloads/debian-11.3.0-amd64-netinst.iso",
            "iso_checksum": "sha512:2810f894afab9ac2631ddd097599761c1481b85e629d6a3197fe1488713af048d37241eb85def681ba86e62b406dd9b891ee1ae7915416335b6bb000d57c1e53",
            "memory": "2048",
            "disk_size": "5000",
            "cpus": 2,

            "ssh_username": "packer",
            "ssh_password": "packer",
            "ssh_timeout": "10m",

            "http_directory": "http",
            "boot_command": [
                "<esc><wait><wait>",
                "install ",
                "auto=true ",
                "priority=critical ",
                "interface=auto ",
                "url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/debian-11-alt.cfg ",
                "<enter>"
            ]
        }
    ],
    "provisioners": [
    {
      "type": "shell",
      "script": "install-ansible-deb.sh",
      "execute_command": "echo 'packer' | sudo -S bash -c '{{ .Path }}'"
    }
  ]
}
